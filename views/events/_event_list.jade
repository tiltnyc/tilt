- var is_admin = (everyauth.loggedIn && everyauth.user.is_admin)

tr(class="event")
  td.event_name 
    a(href='/event/'+event._id, title=event.name) #{event.name}
  td.event_date
    = event.date
  td
    if (is_admin)
      a(href='/event/'+event._id+'/edit', title="edit") Edit
      &nbsp;
      a(class='destroy', href="/event/"+event._id, title="delete") Del