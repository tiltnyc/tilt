!= messages()

h2 Event details

p 
  strong name 
  span &nbsp #{event.name}

p
  strong date
  span &nbsp #{event.date.toDateString()}

p
  a(href="/event/#{event._id}/edit", title="edit") Edit
  &nbsp;
  a(class='destroy', href="/event/#{event._id}", title="delete") Delete
  &nbsp;
  a(href='/events', title="back") List of Events
