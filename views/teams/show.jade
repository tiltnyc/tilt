- var is_admin = (everyauth.loggedIn && everyauth.user.is_admin)

!= messages()

h2 Team details

p
  img(src=team.picture, width=150)

p 
  strong name 
  &nbsp; #{team.name}

p
  strong members
  - if (team.competitors.length > 0)
    ul
      each competitor in team.competitors
        li 
          a(href='/user/' + competitor.user._id + '/profile', title='view competitor') #{competitor.user.username}
  - else
    span#unassigned &nbsp none assigned

if (is_admin)
  p
    a(href='/team/'+team._id+'/edit', title="edit") Edit
    &nbsp;
    a(class='destroy', href='/team/'+team._id, title="delete") Delete
    &nbsp;
    a(href='/teams', title="back") Back