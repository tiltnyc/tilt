h2= title

form(method="post", action="/teams/"+team._id, enctype="multipart/form-data")
  input(name="_method", value='PUT', type='hidden')
  p 
    label(for='team[name]') Name
    br
    input(type="text", id="team[name]", name="team[name]", value=team.name)
  
  p
    if (team.picture)
      img(src=team.picture, width=100)
      &nbsp

    input(type="file", id="team_picture", name="team_picture")
  input(type="submit", value="Submit")
  &nbsp;
  a(href="/teams", title="[back]") [back]